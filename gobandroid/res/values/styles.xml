<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActionBarStyle.Transparent" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="displayOptions" />
    </style>

    <style name="dialog_theme" parent="Base.Theme.AppCompat.Light.Dialog">
    </style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat">

        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:color/transparent</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@drawable/shinkaya</item>
    </style>

    <style name="base_theme" parent="Theme.AppCompat.Light">
        <item name="android:windowAnimationStyle">@null</item>

        <!--	<item name="Background">@android:color/transparent</item>
        <item name="android:textColor">#ff000000</item> -->
        <item name="android:alertDialogStyle">@style/dialog_theme</item>
        <item name="android:windowBackground">@drawable/shinkaya</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Transparent</item>

        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/dividing_color</item>
        <item name="color">@color/dividing_color</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="actionModeBackground">@color/action_bg</item>
    </style>

    <style name="topic_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/topic_bg</item>
        <item name="android:paddingLeft">7pt</item>
    </style>

    <style name="default_activity_main" parent="base_theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- <item name="android:fitsSystemWindows">true</item> -->
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
    </style>

    <style name="clickable" parent="Widget.AppCompat.ActionButton">
        <item name="android:focusable">true</item>

    </style>

    <style name="MenuDrawer" />

    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="MenuDrawer.Widget.Title">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="review_list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="item_relative_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>